<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_good"
        android:src="@drawable/ic_ion9"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="180dp"/>
    <TextView
        android:id="@+id/tv_good_weight"
        android:text="123"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/iv_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_good_trait"
        android:text="123"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_good_weight"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_good_price"
        android:textColor="#FF0000"
        android:text="123"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_good_trait"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
</RelativeLayout>